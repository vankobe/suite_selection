<h1>Listing shops</h1>
<%- scope = [:shop, :attributes]-%>

<table>
  <tr>
    <th><%=t :score, :scope => scope %></th>
    <th><%=t :country_id, :scope => scope %></th>
    <th><%=t :state_id, :scope => scope %></th>
    <th><%=t :address, :scope => scope %></th>
    <th><%=t :name, :scope => scope %></th>
    <th><%=t :home_url, :scope => scope %></th>
    <th><%=t :online_url, :scope => scope %></th>
    <th><%=t :longitude, :scope => scope %></th>
    <th><%=t :latitude, :scope => scope %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shops.each do |shop| %>
  <tr>
    <td><%= shop.score %></td>
    <td><%= shop.country_id %></td>
    <td><%= shop.state_id %></td>
    <td><%= shop.address %></td>
    <td><%= shop.name %></td>
    <td><%= shop.home_url %></td>
    <td><%= shop.online_url %></td>
    <td><%= shop.longitude %></td>
    <td><%= shop.latitude %></td>
    <td><%= link_to 'Show', shop_path(shop.id) %></td>
    <td><%= link_to 'Edit', edit_shop_path(shop.id) %></td>
    <td><%= link_to 'Destroy', delete_shop_path(shop.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

