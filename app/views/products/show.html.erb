<style>
  #shop_info {
    float:left;
  }
  #product_image {
    float:left;
  }
  #product_info {
    clear:both;
  }
  .user_box {
    float:left;
  }
  div#product_review {
    clear:right;
    margin: 10px 0;
  }
  div.review_box {
    clear:both;
    margin:10px 0;
  }
  .review_subject {
    background-color: #ffdddd;
  }
  .review_content {
    background-color: #ffeeee;
  }
</style>
<p id="notice"><%= notice %></p>

<h1><%= @product.name %></h1>
<div id="product_image">
  <%- if @review_images.present? -%>
    <% @review_images.each do |review_image| %>
      <%= image_tag review_image.review_image.thumb("500x400#").url%>
    <%- end -%>
  <%- end -%>
</div>
<%= render :partial => 'shop_info_box', :locals => {:shop => @shop}%>
<%= render :partial => 'product_info_box', :locals => {:product => @product, :product_contents => @product_contents} %>
<%= render :partial => 'product_review_box', :locals => {:reviews => @reviews}%>
<%= link_to 'Edit', edit_product_path(@product.id) %> |
<%= link_to 'Back', products_path %>
