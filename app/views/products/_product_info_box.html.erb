<%-
product ||= nil
product_contents ||= nil
-%>
<div id="product_info_box">
  <h3><%= @product.name %></h3>
  <table id="product_info_table" class="table table-striped span5">
    <tr>
      <th><%= Shop.human_attribute_name(:name)%></th>
      <td><%= link_to product.shop.name, controller: :shops, action: :show, id: product.shop.id%></td>
    </tr>
    <tr>
    <th><%= Product.human_attribute_name(:expire_date)%></th>
      <td><%= product.expire_date%></td>
    </tr>
    <%- product_contents.each_with_index do |content, i|-%>
    <tr>
    <%- if i == 0-%>
      <th rowspan=<%= product_contents.length %>><%= ProductContent.model_name.human%></th>
    <%- end -%>
      <td><%= product_content_list(content)%></td>
    </tr>
    <%- end -%>
  </table>
</div>
