<%-
product ||= nil
product_contents ||= nil
-%>
<style>
#product_info_table{
  margin:5px auto;
}
</style>
<div id="product_info">
  <table id="product_info_table" class="table table-striped span5">
    <tr>
      <th >商品名</th>
      <td><%= product.name %></td>
    </tr>
    <tr>
      <th >販売</th>
      <td><%= MasterTable::CountryJp::Name[product.country_id] %></td>
    </tr>
    <%- product_contents.each_with_index do |content, i|-%>
    <tr>
    <%- if i == 0-%>
      <th rowspan=<%= product_contents.length %>>内容</th>
    <%- end -%>
      <td><%= content.type.name %>&nbsp;<%= content.flavor.name%>&nbsp;&nbsp;<%= content.quantity%>個</td>
    </tr>
    <%- end -%>
    <tr>
      <th>値段</th>
      <td><%= MasterTable::Currency::View[product.currency_id]%> <%= product.price%></td>
    </tr>
    <tr>
      <td colspan="2">
        <a href="<%= product.url %>"><input type="button" class="btn btn-success span4 center" value="<%= product.name %>を買う" /></a>
      </td>
    </tr>
  </table>
</div>
