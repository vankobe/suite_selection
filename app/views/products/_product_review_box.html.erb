<%-
  reviews ||= nil
-%>
<div id="product_review">
  <%- if reviews.present? -%>
    <% reviews.each do |review| %>
    <div class="review_box span6">
      <p class="review_subject span4"><strong><%= review.subject %></strong>&nbsp;評価<%= review.score%></p>
      <p class="review_content span4"><%= review.content ? review.content.comment : ""%></p>
    <%- if user = review.user-%>
      <div class="user_box span2">
        <%= image_tag user.image_url%>
        <p><%= user.nickname %></p>
      </div>
    <%- end -%>
    </div>
    <%- end -%>
  <%- end -%>
</div>
